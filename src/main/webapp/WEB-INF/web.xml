<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>WebSocketChatServlet</servlet-name>
        <servlet-class>org.codejive.websocket.wstestserver.WebSocketChatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DangerZoneWebSocketServlet</servlet-name>
        <servlet-class>org.codejive.websocket.wstestserver.DangerZoneWebSocketServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>WebSocketChatServlet</servlet-name>
        <url-pattern>/chat/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DangerZoneWebSocketServlet</servlet-name>
        <url-pattern>/dangerzone/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
